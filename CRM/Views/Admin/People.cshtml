<div class="people-container">
    <div class="people-controls">
        <button class="btn-add-person btn btn--primary">Dodaj</button>
    </div>
    <div class="people-list">
        <div class="people-row row-header">
            <div class="row-username">
                Nazwa użytkownika
            </div>
            <div class="row-firstname">
                Imię
            </div>
            <div class="row-lastname">
                Nazwisko
            </div>
            <div class="row-role">
                Rola
            </div>
        </div>
    </div>
</div>

<div class="person-editor-container">
    <div class="person-editor-mask"></div>
    <div class="person-editor">
        <div class="person-editor-buttons">
            <i class="fa fa-times" onclick="hidePersonEditor()"></i>
        </div>
        <h1 class="person-editor-title">Dodaj użytkownika</h1>
        <form class="person-editor-form" action="">
            <p>Nazwa użytkownika</p>
            <div class="input-wrapper">
                <input class="input-text" name="username" type="text" />
                <div class="incorrect-input"><i class="fa-solid fa-xmark"></i></div>
            </div>
            <p>Imię</p>
            <div class="input-wrapper">
                <input class="input-text" name="firstName" type="text" />
                <div class="incorrect-input"><i class="fa-solid fa-xmark"></i></div>
            </div>
            <p>Nazwisko</p>
            <div class="input-wrapper">
                <input class="input-text" name="lastName" type="text" />
                <div class="incorrect-input"><i class="fa-solid fa-xmark"></i></div>
            </div>
            <p>Rola</p>
            <div class="input-wrapper">
                <select class="input-select select-role" name="role" onchange="updateSelect(this)">
                    <option value="default" selected hidden disabled>Wybierz...</option>
                    <option value="0">Admin</option>
                    <option value="1">User</option>
                </select>
                <div class="incorrect-input"><i class="fa-solid fa-xmark"></i></div>
            </div>
            <p>Hasło</p>
            <div class="input-wrapper">
                <input class="input-text" name="password" type="password" />
                <div class="incorrect-input"><i class="fa-solid fa-xmark"></i></div>
            </div>
            <button class="btn-save btn btn--primary" type="button" onclick="saveTask()">Zapisz</button>
        </form>
    </div>
</div>

@section Styles
{
    <link rel="stylesheet" href="~/css/People.css" />
    <link rel="stylesheet" href="~/css/CommonForm.css" />
}

@section Scripts 
{
    <script src="~/js/People.js"></script>
    <script>loadUsers();</script>
}